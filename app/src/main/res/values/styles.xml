<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="animPopupMenuTopLeft">
        <item name="android:windowEnterAnimation">@anim/anim_popupmenu_topleft_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popupmenu_topleft_out</item>
    </style>

    <style name="animPopupMenuTopRight">
        <item name="android:windowEnterAnimation">@anim/anim_popupmenu_topright_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popupmenu_topright_out</item>
    </style>

    <style name="animPopupMenuBottomLeft">
        <item name="android:windowEnterAnimation">@anim/anim_popupmenu_bottomleft_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popupmenu_bottomleft_out</item>
    </style>

    <style name="animPopupMenuBottomRight">
        <item name="android:windowEnterAnimation">@anim/anim_popupmenu_bottomright_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popupmenu_bottomright_out</item>
    </style>

    <declare-styleable name="TriangleView">
        <attr name="trv_color" format="color"/>
        <attr name="trv_direction">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="right" value="2"/>
            <enum name="left" value="3"/>
        </attr>
    </declare-styleable>

</resources>
